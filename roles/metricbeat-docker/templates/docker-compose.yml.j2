version: '3.7'

services:
  metricbeat:
    image: docker.elastic.co/beats/metricbeat:{{metricbeat_version}}
    volumes:
        - ./metricbeat.yml:/usr/share/metricbeat/metricbeat.yml:ro
        - /var/run/docker.sock:/var/run/docker.sock:ro
        - /sys/fs/cgroup:/hostfs/sys/fs/cgroup:ro
        - /proc:/hostfs/proc:ro
        - /:/hostfs:ro
    restart: always
    user: root
    network_mode: host
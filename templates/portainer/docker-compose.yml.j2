version: '3.7'

services:
  portainer:
    image: portainer/portainer:{{portainer_version}}
    ports:
    - {{ ports.portainer }}:9000
    volumes:
    - /var/run/docker.sock:/var/run/docker.sock
    - data:/data
    restart: always
    command: --admin-password "{{ portainer_admin_password | password_hash('bcrypt') | replace('$','$$')}}"

volumes:
  data: